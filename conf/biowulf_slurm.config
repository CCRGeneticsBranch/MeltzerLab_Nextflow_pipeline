
params {
  config_profile_description = 'Biowulf nf-core config'
  config_profile_contact = 'staff@hpc.nih.gov'
  config_profile_url = 'https://hpc.nih.gov/apps/nextflow.html'
  max_memory = '224 GB'
  max_cpus = 32
  max_time = '72 h'

  igenomes_base = '/fdb/igenomes/'
}


def OUTDIR = '/data/GBNCI/MeltzerLab_Nextflow_pipeline'
singularity {
    enabled = true
    autoMounts = true
    cacheDir = "$OUTDIR/.singularity"
    runOptions = "-B /lscratch/\$SLURM_JOB_ID"
    envWhitelist='https_proxy,http_proxy,ftp_proxy,DISPLAY,SLURM_JOB_ID'
}


process {
    executor = 'slurm'
    queue = 'norm'
    queueSize = 100
    
    pollInterval = '1 min'
    queueStatInterval = '5 min'
    submitRateLimit = '6/1min'
    cache = 'lenient'
    clusterOptions = ' --gres=lscratch:400'
    stageInMode = 'symlink'
    stageOutMode = 'rsync'
    errorStrategy = { task.exitStatus in [140,143,137,104,134,139,1] ? 'retry' : 'finish' }
    maxRetries    = 2

       withName: 'Fastp' {
       cpus = '10'
       memory = { 40.GB * task.attempt }
       queue = 'quick,norm'
       time = { 4.hour * task.attempt }
   }

       withName: 'BWA_mem2' {
       cpus = '16'
       memory = { 80.GB * task.attempt }
       queue = 'quick,norm'
       time = { 4.hour * task.attempt }
   }
}
